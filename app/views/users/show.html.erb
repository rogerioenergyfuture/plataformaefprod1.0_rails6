<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>  

  
  <dt><strong><%= model_class.human_attribute_name(:typeclasse) %>:</strong></dt>
  <dd><%= @user.typeclasse %></dd>  
  <dt><strong><%= model_class.human_attribute_name(:sign_in_count) %>:</strong></dt>
  <dd><%= @user.sign_in_count %></dd>   
  
  
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn btn-default'  %>
<a href="/users/<%=@user.id%>/edit" class="button is-success">Alterar</a>
<a href="/users/accountaltsenha/<%=@user.id%>" class="button is-success">Alterar Senha</a> 
 
